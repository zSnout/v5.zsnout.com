<!DOCTYPE html>
<html lang="en" class="<%= fullscreen ? "fullscreen" : "" %> <%= buttons.length > 2 ? "large-sidebar" : "" %>">
  <head>
    <title><%= title %></title>
    <meta charset="utf-8" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="theme-color" content="#13474b">
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <%- assets.join("\n    ").trim() %>
  </head>
  <body id="outer">
    <nav id="nav">
      <a href="/" title="Home">
        <svg viewBox="2 2 20 20" width="18px" height="18px">
          <use href="/assets/icons/home.svg#icon" />
        </svg>
      </a>

      <%- indent(buttons.join("\n"), 6) %>
    </nav>

    <main id="main">
      <%- indent(body, 6).trim() %>
    </main>
  </body>
</html>